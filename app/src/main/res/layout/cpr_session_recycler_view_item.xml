    android:layout_height="70dp"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/cprSessionInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
